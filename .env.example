# ==========================================
# ATLANTIPLEX ENVIRONMENT CONFIGURATION
# ==========================================
# 
# ⚠️ SECURITY NOTICE:
# This file should NEVER contain real secrets!
# Copy to .env and replace CHANGE_ME values with real production secrets
# Never commit .env to git - only commit .env.example
# Add .env to .gitignore
#

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=atlantiplex
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS
DB_NAME=atlantiplex
DATABASE_URL=postgresql://atlantiplex:CHANGE_ME@postgres:5432/atlantiplex?sslmode=require

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS
REDIS_URL=redis://:CHANGE_ME@redis:6379/0

# ==========================================
# AUTHENTICATION & JWT
# ==========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_MIN_32_CHARS
JWT_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# ==========================================
# SESSION & SECURITY
# ==========================================
SESSION_SECRET=CHANGE_ME_STRONG_SECRET_MIN_32_CHARS
BCRYPT_ROUNDS=12

# ==========================================
# STRIPE CONFIGURATION (Payment Processing)
# ==========================================
# Replace with your actual Stripe test keys for development
# Replace with your actual Stripe live keys for production
# Keep sk_live_ KEYS IN ENVIRONMENT ONLY - NEVER IN CODE
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_test_CHANGE_ME

# ==========================================
# STREAMING CONFIGURATION
# ==========================================
# Do NOT commit real stream keys to git
# Set these in production via secure configuration management
YOUTUBE_STREAM_KEY=CHANGE_ME_YOUR_STREAM_KEY
TWITCH_STREAM_KEY=CHANGE_ME_YOUR_STREAM_KEY
YOUTUBE_API_KEY=CHANGE_ME_YOUR_API_KEY
TWITCH_API_KEY=CHANGE_ME_YOUR_API_KEY
TWITCH_CLIENT_ID=CHANGE_ME_YOUR_CLIENT_ID

# ==========================================
# OBS INTEGRATION
# ==========================================
OBS_WEBSOCKET_URL=ws://localhost:4455
OBS_WEBSOCKET_PASSWORD=CHANGE_ME

# ==========================================
# PLATFORM INTEGRATIONS
# ==========================================
FACEBOOK_ACCESS_TOKEN=CHANGE_ME
INSTAGRAM_ACCESS_TOKEN=CHANGE_ME
TIKTOK_ACCESS_TOKEN=CHANGE_ME

# ==========================================
# CORS & DOMAIN CONFIGURATION
# ==========================================
CORS_ORIGIN=https://atlantiplex.example.com
API_URL=https://api.atlantiplex.example.com
FRONTEND_URL=https://atlantiplex.example.com

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV=production
FLASK_ENV=production
LOG_LEVEL=info

# ==========================================
# API CONFIGURATION
# ==========================================
API_PORT=3000
API_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=CHANGE_ME
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM=noreply@atlantiplex.example.com

# ==========================================
# AWS/CLOUD STORAGE (Optional)
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_S3_BUCKET=CHANGE_ME

# ==========================================
# MONITORING & ANALYTICS (Optional)
# ==========================================
SENTRY_DSN=CHANGE_ME
NEW_RELIC_LICENSE_KEY=CHANGE_ME
DATADOG_API_KEY=CHANGE_ME

# ==========================================
# SECURITY SETTINGS
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# ==========================================
# CERTIFICATE & SSL
# ==========================================
SSL_CERT_PATH=/etc/nginx/ssl/tls.crt
SSL_KEY_PATH=/etc/nginx/ssl/tls.key
