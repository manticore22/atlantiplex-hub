  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Atlantiplex Studio Dashboard"
    },
    {
      "src": "/screenshots/mobile-stream.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile streaming interface"
    },
    {
      "src": "/screenshots/analytics.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Analytics dashboard"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+atlantiplex",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload-video",
      "accept": {
        "video/*": [".mp4", ".mov", ".avi", ".webm"]
      }
    },
    {
      "action": "/upload-audio",
      "accept": {
        "audio/*": [".mp3", ".wav", ".aac", ".ogg"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["video/*", "audio/*", "image/*"]
        }
      ]
    }
  }
}