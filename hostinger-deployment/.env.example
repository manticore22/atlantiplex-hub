# Hostinger Deployment - Environment Configuration
# Copy this to .env and fill in your actual values

# Database Configuration
DB_USER=atlantiplex
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=atlantiplex

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# JWT Secrets
JWT_SECRET=CHANGE_ME_JWT_SECRET_KEY
JWT_REFRESH_SECRET=CHANGE_ME_JWT_REFRESH_SECRET

# Stripe Integration
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLIC_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Domain Configuration
WEBSITE_URL=https://www.atlantiplex.com
STUDIO_URL=https://studio.atlantiplex.com
API_URL=https://api.atlantiplex.com
CORS_ORIGIN=https://www.atlantiplex.com

# Image Tag (for Docker builds)
IMAGE_TAG=latest

# Node Environment
NODE_ENV=production

# Deployment Environment
DEPLOYMENT_ENV=hostinger
TZ=UTC

# Optional: Email Configuration (if using for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-app-password

# Optional: Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Optional: Logging
LOG_LEVEL=info
LOG_FORMAT=json
